<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Temperatura">

    <TextView
            android:id="@+id/cabecalho"
            android:text="@string/convTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="256dp"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorTextoBlack"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="76dp"/>

    <EditText
            android:id="@+id/celsiusEntrada"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:hint="Celsius"
            android:ems="10"
            app:layout_constraintTop_toBottomOf="@+id/cabecalho"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"/>
    <EditText
            android:id="@+id/fareheintEntrada"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:gravity="center"
            android:textSize="16sp"
            android:inputType="numberDecimal"
            android:hint="Fareheint"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cabecalho"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>
    <TextView
            android:id="@+id/fareheintSaida"
            android:text="@string/valorInicial"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/celsiusEntrada"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" android:layout_marginTop="76dp"/>
    <TextView
            android:id="@+id/celsiusSaida"
            android:text="@string/valorInicial"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/fareheintEntrada"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"/>
    <Button
            android:id="@+id/celsiusToFareheint"
            android:text="@string/calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="108dp"/>
    <Button
            android:id="@+id/fareheintToCelsius"
            android:text="@string/calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="108dp"/>
    <Button
            android:id="@+id/clearTemp"
            android:text="@string/limpar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="40dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>